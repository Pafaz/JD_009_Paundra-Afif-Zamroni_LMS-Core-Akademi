generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String      @id @default(uuid())
  name           String
  email          String      @unique
  password       String
  role           Role
  courses        Course[]    @relation("StudentCourses")
  sessionStudent Session[]   @relation("StudentBookings")
  sessionMentor  Session[]   @relation("MentorBookings")
  feedbacks      Feedback[]
}

model Course {
  id            String      @id @default(uuid())
  title          String
  code          String      @unique
  price         Float
  image         String
  difficulty    Difficulty
  description   String
  durationWeeks Int
  students      User[]      @relation("StudentCourses")
  materials     Material[]
}

model Material {
  id       String       @id @default(uuid())
  title    String
  type     MaterialType
  url      String
  courseId String
  course   Course       @relation(fields: [courseId], references: [id])
}

model Session {
  id        String        @id @default(uuid())
  date      DateTime
  link      String?
  status    StatusBooking
  method    BookingMethod
  deletedAt DateTime?
  mentorId  String
  studentId String
  mentor    User          @relation("MentorBookings", fields: [mentorId], references: [id])
  student   User          @relation("StudentBookings", fields: [studentId], references: [id])
  feedbacks Feedback[]
}

model Feedback {
  id        String   @id @default(uuid())
  content   String
  sessionId String
  session   Session  @relation(fields: [sessionId], references: [id])
  userId    String
  user      User     @relation(fields: [userId], references: [id])
  createdAt DateTime @default(now())
}

enum Role {
  STUDENT
  MENTOR
  ADMIN
}

enum MaterialType {
  PDF
  PPT
  VIDEO
}

enum StatusBooking {
  PENDING
  APPROVED
  REJECTED
}

enum BookingMethod {
  ONLINE
  OFFLINE
}

enum Difficulty {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}
